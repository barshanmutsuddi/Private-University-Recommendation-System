<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskActivity">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TaskActivity">
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:background="#FFA500"
        android:paddingVertical="20dp"
        android:textColor="#262626"
        android:textAlignment="center"
        android:text="Recommended Private University"/>

    <TextView
        android:id="@+id/textViewFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFA500"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/textViewVarsityName1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewRating1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewSub1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewFee1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/web1btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:textColor="#ea0720"
        android:onClick="website1"
        android:text="WEBSITE 1"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/textViewSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFA500"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/textViewVarsityName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewRating2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewSub2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewFee2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <Button
        android:id="@+id/web2btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:textColor="#ea0720"
        android:onClick="website2"
        android:text="WEBSITE 2"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_marginBottom="30dp"/>
    <TextView
        android:id="@+id/textViewThird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#FFA500"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/textViewVarsityName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewRating3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewSub3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <TextView
        android:id="@+id/textViewFee3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="30dp"/>
    <Button
        android:id="@+id/web3btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFA500"
        android:textColor="#ea0720"
        android:onClick="website3"
        android:text="WEBSITE 3"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_marginBottom="30dp"/>
    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="85dp"/>
    <Button
        android:id="@+id/ratingbtn"
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:text="Submit Rating"
        android:textColor="#262626"
        android:background="#FFA500"
        android:onClick="ratinguser"
        android:textSize="12dp"
        android:layout_marginHorizontal="156dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:textAlignment="center"
        android:textStyle="italic"
        android:text="How will you rate this recommendation for you?"/>

    <Button
        android:id="@+id/buttonCloudStore2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search again"
        android:background="#FFA500"
        android:textColor="#262626"
        android:onClick="repeated"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="30dp" />
</LinearLayout>
</ScrollView>