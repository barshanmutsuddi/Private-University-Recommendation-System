<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SelectionActivity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".SelectionActivity">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Selection Category"
            android:textAlignment="center"
            android:paddingVertical="10dp"
            android:background="#FFA500"
            android:textSize="30dp"
            android:textColor="#262626"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In which division do you want to study?"
            android:textSize="16dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"/>

        <CheckBox
            android:id="@+id/dhaka_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="DHAKA"
            android:onClick="rbclick"/>
        <CheckBox
            android:id="@+id/chittagong_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="CHITTAGONG"
            android:onClick="rbclick"/>
        <CheckBox
            android:id="@+id/barishal_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="BARISHAL"
            android:onClick="rbclick"/>
        <CheckBox
            android:id="@+id/rajshahi_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="RAJSHAHI"
            android:onClick="rbclick"/>
        <CheckBox
            android:id="@+id/khulna_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="KHULNA"
            android:onClick="rbclick"/>
        <CheckBox
            android:id="@+id/sylhet_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="SYLHET"
            android:onClick="rbclick"/>
        <CheckBox
            android:id="@+id/rongpur_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:text="RONGPUR"
            android:onClick="rbclick"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Which subject do you prefer for Higher Education?"
            android:textSize="16dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"/>
        <RadioGroup
            android:id="@+id/subject_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp">
            <RadioButton
                android:id="@+id/arch_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Architecture"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/cse_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Computer Science and Engineering"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/eee_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Electrical and Electronics Engineering"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/bba_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bachelor of Business Administration"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/eng_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="English"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/tex_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Textile Engineering"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/civil_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Civil Engineering"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/eco_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Economics"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/journ_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Journalism"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/llb_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Law"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/pharma_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pharmacy"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/tour_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tourism"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/ete_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Telecomunication Engineering"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/genetic_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Genetic Engineering"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/socio_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sociology"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/stat_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/biochem_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biochemistry"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/environ_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Environmental Science"
                android:onClick="subclick"/>
            <RadioButton
                android:id="@+id/micro_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Micro Biology"
                android:onClick="subclick"/>



        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Maximum fee you can afford: "
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="30dp"/>
        <RadioGroup
            android:id="@+id/fee_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <RadioButton
                android:id="@+id/fee1_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="3 Lakh"
                android:onClick="feeclick"/>
            <RadioButton
                android:id="@+id/fee2_radio"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="wrap_content"
                android:text="4 Lakh"
                android:onClick="feeclick"/>
            <RadioButton
                android:id="@+id/fee3_radio"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:layout_height="wrap_content"
                android:text="6 Lakh"
                android:onClick="feeclick"/>
            <RadioButton
                android:id="@+id/fee4_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="8 Lakh"
                android:onClick="feeclick"/>
            <RadioButton
                android:id="@+id/fee5_radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="Above 8 Lakh"
                android:onClick="feeclick"/>

        </RadioGroup>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Click button one time each first Submit then Calculate then Show Result"/>
        <Button
            android:id="@+id/buttonCloudStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:background="#262626"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:onClick="cloudstore"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp" />
        <Button
            android:id="@+id/buttonstep2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULATE
"
            android:background="#262626"
            android:textColor="#FFF"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:onClick="step2"
            android:layout_marginBottom="30dp" />
        <Button
            android:id="@+id/buttonCloudStore2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See Result"
            android:background="#FFA500"
            android:textColor="#262626"
            android:textAlignment="center"
            android:textStyle="bold"
            android:onClick="cloudstore2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp" />
        <TextView
            android:id="@+id/textViewData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:textSize="18dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:text="Log out"
            android:textSize="15dp"
            android:layout_marginRight="20dp"
            android:background="#FFA500"
            android:textColor="#262626"
            android:id="@+id/logout"
            android:onClick="logout"/>
    </LinearLayout>
</ScrollView>